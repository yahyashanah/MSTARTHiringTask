@model User
<!-- Search form -->
<form method="get">
    <input type="text" name="search" placeholder="Search">
    <button type="submit" class="btn btn-info">Search</button>
</form>

<br />
<br />
<br />

<!-- User grid -->

@using (Html.BeginForm("Add", "User", FormMethod.Post, new { @class = "form-horizontal form-label-left", style = "overflow-x:hidden; overflow-y:hidden" }))
{
    @Html.HiddenFor(Model => Model.ID)
    <div class="form-group row">
        <label class="control-label col-md-2 col-sm-12 "> User Name<span class="required"></span></label>
        <div class="col-md-4 col-sm-12 ">
            @Html.EditorFor(Model => Model.Username, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
        </div>

        <label class="control-label col-md-2 col-sm-12 "> Email  <span class="required"></span></label>
        <div class="col-md-4 col-sm-12 ">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <br />
    <div>
        <div class="col-md-12 col-sm-12">
            <button type="submit" class="btn btn-success">Add</button>
            @*<a href="@Url.Action("Add", "User")" class="btn btn-dark">Add User</a>*@
        </div>
    </div>
}
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in ViewBag.users)
        {
            <tr>
                <th scope="row">@user.ID</th>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <th><button type="submit" href="@Url.Action("Delete", "User")" class="btn btn-danger">Delete</button></th>
                <th><button type="submit" href="@Url.Action("Edit", "User")" class="btn btn-success">Edit User</button></th>
            </tr>
        }
    </tbody>
</table>